{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Bundle Install",
			"command": "bundle install",
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Jekyll Serve",
			"command": "bundle exec jekyll serve --incremental --livereload",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Open Localhost",
			"command": "powershell -Command \"Start-Process 'http://127.0.0.1:4000/'\"",
			"dependsOn": ["Jekyll Serve"],
			"group": "none"
		}
	]
}